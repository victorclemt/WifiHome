{	
    "widgets": {
        "song": {  
            "create": "CanvasWidget",  
            "param": {  
                "w"         : 1280,  
                "h"         : 720,  
                "zIndex"    : 1,  
                "speed"     : 200,  
                "draw"      : "soundChannels.drawSong",
                "defaultState"  : "exit",
                "states": {
                    "enter":  { "x": 0, "y": 0, "w": 1280, "h": 614, "a": 255 },
                    "enter2":  { "x": 0, "y": 0, "w": 1280, "h": 720, "a": 255 },
                    "exit":   { "x": 0, "y": 0, "w": 1280, "h": 614, "a": 0 },
                    "exit2":   { "x": 0, "y": 0, "w": 1280, "h": 614, "a": 0 }
                }
            }  
        }
    }
}